<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <Appender-ref ref="console"/>
        </Root>
        <Logger name="org.springframework.web" level="info">
            <Appender-ref ref="console"/>
        </Logger>
    </Loggers>
</Configuration>